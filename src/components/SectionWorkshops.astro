---
import { MonitorPlay, Users, Clock } from 'lucide-react';

const workshops = [
  { 
    title: "Yaratıcı Yazarlık 101", 
    instructor: "Ahmet Ümit", 
    date: "12 Kasım - 12 Aralık", 
    level: "Başlangıç",
    image: "bg-gradient-to-br from-purple-900 to-indigo-900"
  },
  { 
    title: "Felsefe Tarihi Okumaları", 
    instructor: "Prof. Dr. İoanna Kuçuradi", 
    date: "Her Çarşamba", 
    level: "Orta Seviye",
    image: "bg-gradient-to-br from-orange-900 to-red-900"
  },
  { 
    title: "Eleştirel Düşünme Teknikleri", 
    instructor: "Dr. Özgür Uçkan", 
    date: "5 Kasım", 
    level: "İleri Seviye",
    image: "bg-gradient-to-br from-emerald-900 to-teal-900"
  }
];
---

<section id="workshops-section" class="py-24 bg-white border-b border-gray-200">
  <div class="container mx-auto px-6">
    <div class="mb-16 pl-6 border-l-8 border-primary">
       <span class="text-primary font-bold tracking-widest uppercase text-sm mb-2 block">Eğitim ve Gelişim</span>
       <h2 class="text-4xl md:text-5xl font-black text-swiss-text tracking-tighter uppercase mb-4">Atölyeler.</h2>
       <p class="text-xl font-medium text-swiss-text/70 max-w-2xl">Alanında uzman isimlerle derinleşin, üretin ve paylaşın.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
       {workshops.map((workshop, index) => (
         <div class="group relative bg-swiss-bg border border-gray-200 hover:border-primary transition-colors">
            <!-- Image Area (Solid Block) -->
            <div class={`h-48 w-full ${index === 0 ? 'bg-indigo-900' : index === 1 ? 'bg-red-900' : 'bg-teal-900'} relative`}>
                <div class="absolute inset-0 opacity-20 bg-[linear-gradient(45deg,transparent_25%,rgba(255,255,255,0.3)_25%,rgba(255,255,255,0.3)_50%,transparent_50%,transparent_75%,rgba(255,255,255,0.3)_75%,rgba(255,255,255,0.3)_100%)] bg-size-[20px_20px]"></div>
                <div class="absolute bottom-0 left-0 p-4">
                    <span class="px-3 py-1 bg-white text-swiss-text text-xs font-bold uppercase tracking-wider">{workshop.level}</span>
                </div>
            </div>
            
            <div class="p-8">
               <div class="flex items-center gap-2 text-swiss-muted text-xs font-bold uppercase tracking-wide mb-4">
                  <Clock className="w-4 h-4" />
                  <span>{workshop.date}</span>
               </div>
               
               <h3 class="text-2xl font-black text-swiss-text mb-2 group-hover:text-primary transition-colors leading-tight min-h-14">{workshop.title}</h3>
               <p class="text-sm font-bold text-swiss-muted mb-8 uppercase tracking-wide">Eğitmen: <span class="text-swiss-text">{workshop.instructor}</span></p>
               
               <button class="w-full py-4 border-2 border-swiss-text text-swiss-text font-black uppercase tracking-tight hover:bg-swiss-text hover:text-white transition-all flex items-center justify-center gap-2 rounded-none">
                  <MonitorPlay className="w-5 h-5" />
                  Detayları İncele
               </button>
            </div>
         </div>
       ))}
    </div>
  </div>
</section>
