---
import { MonitorPlay, Users, Clock } from 'lucide-react';

const workshops = [
  { 
    title: "Yaratıcı Yazarlık 101", 
    instructor: "Ahmet Ümit", 
    date: "12 Kasım - 12 Aralık", 
    level: "Başlangıç",
    image: "bg-linear-to-br from-purple-900 to-indigo-900"
  },
  { 
    title: "Felsefe Tarihi Okumaları", 
    instructor: "Prof. Dr. İoanna Kuçuradi", 
    date: "Her Çarşamba", 
    level: "Orta Seviye",
    image: "bg-linear-to-br from-orange-900 to-red-900"
  },
  { 
    title: "Eleştirel Düşünme Teknikleri", 
    instructor: "Dr. Özgür Uçkan", 
    date: "5 Kasım", 
    level: "İleri Seviye",
    image: "bg-linear-to-br from-emerald-900 to-teal-900"
  }
];
---

<section id="workshops-section" class="py-24 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16">
       <span class="text-primary font-bold tracking-widest uppercase text-sm mb-4 block">Eğitim ve Gelişim</span>
       <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Atölyeler</h2>
       <p class="text-text-muted max-w-2xl mx-auto">Alanında uzman isimlerle derinleşin, üretin ve paylaşın.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
       {workshops.map(workshop => (
         <div class="group relative bg-white/5 backdrop-blur-xl rounded-2xl overflow-hidden border border-white/10 hover:border-[#0891b2]/50 transition-all duration-300 hover:-translate-y-2">
            <!-- Image Area -->
            <div class={`h-48 ${workshop.image.replace('bg-gradient-', 'bg-linear-')} relative overflow-hidden`}>
                <div class="absolute inset-0 bg-black/20 group-hover:bg-transparent transition-colors"></div>
            </div>
            
            <div class="p-8">
               <div class="flex items-center justify-between mb-4">
                  <span class="px-3 py-1 bg-white/5 rounded-full text-xs text-white border border-white/10">{workshop.level}</span>
                  <div class="flex items-center gap-1 text-gray-400 text-xs">
                     <Clock className="w-3 h-3" />
                     <span>{workshop.date}</span>
                  </div>
               </div>
               
               <h3 class="text-xl font-bold text-white mb-2 group-hover:text-[#0891b2] transition-colors">{workshop.title}</h3>
               <p class="text-sm text-gray-400 mb-6">Eğitmen: <span class="text-white">{workshop.instructor}</span></p>
               
               <button class="w-full py-3 border border-white/10 rounded-xl text-white font-medium hover:bg-white/5 hover:border-white/30 transition-all flex items-center justify-center gap-2">
                  <MonitorPlay className="w-4 h-4" />
                  Detayları İncele
               </button>
            </div>
         </div>
       ))}
    </div>
  </div>
</section>
