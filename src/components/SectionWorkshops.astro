---
import { MonitorPlay, Users, Clock, ArrowRight } from 'lucide-react';

const workshops = [
  { 
    title: "Yaratıcı Yazarlık 101", 
    instructor: "Ahmet Ümit", 
    date: "12 Kasım", 
    level: "Başlangıç",
    bg: "bg-neo-teal"
  },
  { 
    title: "Felsefe Tarihi", 
    instructor: "İoanna Kuçuradi", 
    date: "Her Çarşamba", 
    level: "Orta",
    bg: "bg-neo-red"
  },
  { 
    title: "Eleştirel Düşünme", 
    instructor: "Özgür Uçkan", 
    date: "5 Kasım", 
    level: "İleri",
    bg: "bg-neo-yellow"
  }
];
---

<section id="workshops-section" class="py-24 bg-cream border-t border-black">
  <div class="container mx-auto px-6 relative z-10">
    <div class="mb-16 flex flex-col md:flex-row justify-between items-end gap-6">
       <div>
         <span class="text-black font-black tracking-widest text-sm uppercase mb-2 inline-block bg-white border-2 border-black px-2 py-1 transform -rotate-2 shadow-neo-sm">AKADEMİ</span>
         <h2 class="text-6xl font-black text-black tracking-tighter shadow-neo-sm bg-neo-teal inline-block px-4 border-2 border-black">ATÖLYELER</h2>
       </div>
       <p class="text-black font-bold font-mono max-w-sm text-right hidden md:block">
         Alanının en iyileriyle derinleşin. Teori ve pratiği birleştirin.
       </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
       {workshops.map(workshop => (
         <div class="group relative bg-white border-4 border-black hover:-translate-y-2 hover:shadow-neo-lg shadow-neo transition-all duration-300">
            <!-- Visual Header -->
            <div class={`h-32 ${workshop.bg} relative p-6 border-b-4 border-black flex flex-col justify-between`}>
                 <div class="w-full flex justify-between items-start">
                     <span class="px-3 py-1 bg-black text-white text-xs font-black uppercase tracking-wider border-2 border-white">{workshop.level}</span>
                     <Users className="text-black w-8 h-8 opacity-50" />
                 </div>
            </div>
            
            <div class="p-8">
               <div class="flex items-center gap-2 text-black text-xs font-bold uppercase tracking-wider mb-4 border-b-2 border-black pb-2">
                  <Clock className="w-4 h-4" />
                  <span>{workshop.date}</span>
               </div>
               
               <h3 class="text-2xl font-black text-black mb-2 leading-tight uppercase">{workshop.title}</h3>
               <p class="text-sm text-black mb-8 font-bold font-mono">Eğitmen: <span class="bg-neo-yellow px-1 border border-black">{workshop.instructor}</span></p>
               
               <button class="w-full py-4 bg-black text-white font-bold transition-all flex items-center justify-center gap-2 hover:bg-neo-red hover:border-black border-2 border-transparent hover:border-2">
                  <MonitorPlay className="w-5 h-5" />
                  Kayıt Ol ->
               </button>
            </div>
         </div>
       ))}
    </div>
  </div>
</section>
