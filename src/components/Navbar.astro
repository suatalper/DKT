---
import { Menu, X } from 'lucide-react';

const links = [
  { name: 'Anasayfa', href: '#' },
  { name: 'İncelemeler', href: '#book-section' },
  { name: 'Fikirler', href: '#brain-section' },
  { name: 'Etkinlikler', href: '#interaction-section' },
  { name: 'Atölyeler', href: '#workshops-section' },
  { name: 'Hakkımızda', href: '#about-section' },
];
---
<nav class="fixed top-0 w-full z-50 bg-cream border-b-3 border-black">
  <div class="container mx-auto px-6 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="text-3xl font-black italic tracking-tighter text-black hover:text-neo-teal transition-colors flex items-center gap-1 group">
      DKT<span class="w-3 h-3 bg-neo-red border-2 border-black inline-block group-hover:bg-neo-teal"></span>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center gap-8">
      {links.map((link) => (
        <a href={link.href} class="text-base font-bold text-black uppercase tracking-widest hover:bg-neo-teal hover:text-white px-2 py-1 transition-all border-2 border-transparent hover:border-black hover:shadow-neo">
          {link.name}
        </a>
      ))}
      
      <a href="#" class="px-6 py-2 bg-neo-red text-white font-bold border-2 border-black shadow-neo hover:translate-x-[2px] hover:translate-y-[2px] hover:shadow-none transition-all uppercase tracking-widest text-sm">
        KATIL
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-black hover:text-neo-teal focus:outline-none transition-colors border-2 border-black p-1 shadow-neo-sm active:shadow-none active:translate-x-[2px] active:translate-y-[2px]">
      <Menu className="w-8 h-8" />
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-cream z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col items-center justify-center gap-8 border-l-4 border-black">
    {links.map((link) => (
      <a href={link.href} class="text-4xl font-black text-black uppercase tracking-tighter hover:bg-neo-teal hover:text-white px-4 py-2 border-2 border-transparent hover:border-black hover:shadow-neo transition-all">
        {link.name}
      </a>
    ))}
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  let isMenuOpen = false;

  function toggleMenu() {
    isMenuOpen = !isMenuOpen;
    if (isMenuOpen) {
      mobileMenu?.classList.remove('scale-95', 'opacity-0', 'pointer-events-none');
      mobileMenu?.classList.add('scale-100', 'opacity-100', 'pointer-events-auto');
    } else {
      mobileMenu?.classList.add('scale-95', 'opacity-0', 'pointer-events-none');
      mobileMenu?.classList.remove('scale-100', 'opacity-100', 'pointer-events-auto');
    }
  }

  menuToggle?.addEventListener('click', toggleMenu);
</script>


