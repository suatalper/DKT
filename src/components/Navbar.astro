---
import { Menu, X } from 'lucide-react';

const links = [
  { name: 'Anasayfa', href: '#' },
  { name: 'İncelemeler', href: '#book-section' },
  { name: 'Fikirler', href: '#brain-section' },
  { name: 'Etkinlikler', href: '#interaction-section' },
  { name: 'Atölyeler', href: '#workshops-section' },
  { name: 'Hakkımızda', href: '#about-section' },
];
---
<nav class="fixed top-6 left-1/2 -translate-x-1/2 w-[90%] max-w-5xl z-50 bg-white/5 backdrop-blur-xl border border-white/10 rounded-full shadow-2xl transition-all duration-300 hover:bg-white/10 hover:border-white/20">
  <div class="px-8 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="text-2xl font-black italic tracking-tighter text-white hover:text-teal-400 transition-colors">
      DKT<span class="text-teal-400">.</span>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center gap-8">
      {links.map((link) => (
        <a href={link.href} class="text-sm font-bold text-white/70 hover:text-white transition-colors uppercase tracking-wider relative group">
          {link.name}
          <span class="absolute -bottom-1 left-1/2 w-0 h-0.5 bg-linear-to-r from-teal-400 to-red-500 transition-all duration-300 group-hover:w-full group-hover:-translate-x-1/2"></span>
        </a>
      ))}
      
      <a href="#" class="px-6 py-2 rounded-full text-xs font-black uppercase tracking-widest bg-linear-to-r from-teal-600 to-teal-800 text-white hover:from-teal-500 hover:to-teal-700 transition-all shadow-lg hover:shadow-teal-500/30">
        Katıl
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-white hover:text-teal-400 focus:outline-none transition-colors">
      <Menu className="w-6 h-6" />
    </button>
  </div>

  <!-- Mobile Menu Overlay (Adjusted for floating nav) -->
  <div id="mobile-menu" class="fixed inset-x-0 top-20 mx-auto w-[90%] bg-slate-900/95 backdrop-blur-2xl z-40 rounded-3xl border border-white/10 shadow-2xl transform scale-95 opacity-0 pointer-events-none transition-all duration-300 md:hidden flex flex-col items-center justify-center gap-8 py-12">
    {links.map((link) => (
      <a href={link.href} class="text-xl font-bold text-white hover:text-teal-400 transition-colors">
        {link.name}
      </a>
    ))}
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  let isMenuOpen = false;

  function toggleMenu() {
    isMenuOpen = !isMenuOpen;
    if (isMenuOpen) {
      mobileMenu?.classList.remove('scale-95', 'opacity-0', 'pointer-events-none');
      mobileMenu?.classList.add('scale-100', 'opacity-100', 'pointer-events-auto');
    } else {
      mobileMenu?.classList.add('scale-95', 'opacity-0', 'pointer-events-none');
      mobileMenu?.classList.remove('scale-100', 'opacity-100', 'pointer-events-auto');
    }
  }

  menuToggle?.addEventListener('click', toggleMenu);
</script>


