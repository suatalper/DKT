---
import { Menu, X } from 'lucide-react';

const links = [
  { name: 'Anasayfa', href: '#' },
  { name: 'İncelemeler', href: '#book-section' },
  { name: 'Fikirler', href: '#brain-section' },
  { name: 'Etkinlikler', href: '#interaction-section' },
  { name: 'Atölyeler', href: '#workshops-section' },
  { name: 'Hakkımızda', href: '#about-section' },
];
---

<nav class="fixed top-0 w-full z-50 bg-white/95 backdrop-blur-sm border-b border-neutral-100 transition-all duration-300">
  <div class="container mx-auto px-6 h-20 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="text-2xl font-serif font-bold text-primary tracking-tight transition-colors hover:text-primary-hover">
      DKT<span class="text-neutral-400">.</span>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center gap-8">
      {links.map((link) => (
        <a href={link.href} class="text-sm font-medium text-neutral-600 hover:text-primary transition-colors">
          {link.name}
        </a>
      ))}
      
      <a href="#" class="px-5 py-2.5 text-sm font-medium text-accent border border-accent rounded-full hover:bg-red-50 transition-colors">
        Katıl
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-neutral-800 hover:text-primary focus:outline-none transition-colors">
      <Menu className="w-6 h-6" />
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-white z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col items-center justify-center gap-8">
    <button id="menu-close" class="absolute top-6 right-6 text-neutral-500 hover:text-neutral-900 transition-colors">
      <X className="w-8 h-8" />
    </button>
    
    {links.map((link) => (
      <a href={link.href} class="text-2xl font-serif font-medium text-neutral-800 hover:text-primary transition-colors">
        {link.name}
      </a>
    ))}
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const menuClose = document.getElementById('menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const links = document.querySelectorAll('#mobile-menu a');

  function toggleMenu() {
    mobileMenu?.classList.toggle('translate-x-full');
    document.body.classList.toggle('overflow-hidden');
  }

  menuToggle?.addEventListener('click', toggleMenu);
  menuClose?.addEventListener('click', toggleMenu);
  links.forEach(link => link.addEventListener('click', toggleMenu));
</script>
