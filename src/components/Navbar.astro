---
import { Menu, X } from 'lucide-react';

const links = [
  { name: 'Anasayfa', href: '#' },
  { name: 'İncelemeler', href: '#book-section' },
  { name: 'Fikirler', href: '#brain-section' },
  { name: 'Etkinlikler', href: '#interaction-section' },
  { name: 'Atölyeler', href: '#workshops-section' },
  { name: 'Hakkımızda', href: '#about-section' },
];
---

<nav class="fixed top-6 left-1/2 -translate-x-1/2 z-50 w-[90%] max-w-5xl bg-white rounded-full shadow-[0_20px_40px_-15px_rgba(8,145,178,0.1)] border border-gray-100 transition-all duration-300">
  <div class="px-6 h-16 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="flex items-center gap-2 group">
      <div class="w-8 h-8 bg-[#991b1b] rounded-full flex items-center justify-center text-white shadow-md group-hover:scale-105 transition-transform duration-300">
        <span class="font-bold text-sm">DKT</span>
      </div>
      <span class="text-[#1e293b] font-bold text-lg group-hover:text-[#991b1b] transition-colors">Düşünce<span class="text-[#0891b2]">.</span></span>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center gap-6">
      {links.map((link) => (
        <a href={link.href} class="text-[#1e293b]/70 hover:text-[#0891b2] font-medium text-sm transition-colors">
          {link.name}
        </a>
      ))}
      
      <a href="#" class="px-5 py-2 bg-[#991b1b] hover:bg-[#991b1b]/90 text-white rounded-full font-medium text-sm transition-all shadow-lg shadow-red-900/20 hover:-translate-y-0.5">
        Katıl
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-[#1e293b] hover:text-[#0891b2] focus:outline-none">
      <Menu className="w-6 h-6" />
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-[#ecfeff]/95 backdrop-blur-xl z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col items-center justify-center gap-8">
    <button id="menu-close" class="absolute top-6 right-6 text-[#1e293b] hover:text-[#991b1b]">
      <X className="w-8 h-8" />
    </button>
    
    {links.map((link) => (
       <a href={link.href} class="text-xl font-medium text-[#1e293b] hover:text-[#0891b2]">
         {link.name}
       </a>
    ))}
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const menuClose = document.getElementById('menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const links = document.querySelectorAll('#mobile-menu a');

  function toggleMenu() {
    mobileMenu?.classList.toggle('translate-x-full');
    document.body.classList.toggle('overflow-hidden');
  }

  menuToggle?.addEventListener('click', toggleMenu);
  menuClose?.addEventListener('click', toggleMenu);
  links.forEach(link => link.addEventListener('click', toggleMenu));
</script>
