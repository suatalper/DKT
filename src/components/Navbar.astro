---
import { Menu, X } from 'lucide-react';

const links = [
  { name: 'Anasayfa', href: '#' },
  { name: 'İncelemeler', href: '#book-section' },
  { name: 'Fikirler', href: '#brain-section' },
  { name: 'Etkinlikler', href: '#interaction-section' },
  { name: 'Atölyeler', href: '#workshops-section' },
  { name: 'Hakkımızda', href: '#about-section' },
];
---

<nav class="fixed top-0 w-full z-50 bg-white border-b-4 border-black transition-all duration-300">
  <div class="container mx-auto px-6 h-24 flex items-center justify-between">
    <!-- Logo -->
    <a href="#" class="text-3xl font-black italic flex items-center gap-2 group transform hover:-rotate-2 transition-transform">
      <div class="w-12 h-12 bg-primary border-4 border-black flex items-center justify-center text-black shadow-brutal transition-transform group-hover:translate-x-1 group-hover:translate-y-1 group-hover:shadow-none">
        <span class="font-bold text-xl">DKT</span>
      </div>
      <span class="text-black tracking-tighter">Düşünce<span class="text-secondary">.</span></span>
    </a>

    <!-- Desktop Menu -->
    <div class="hidden md:flex items-center gap-6">
      {links.map((link) => (
        <a href={link.href} class="text-black font-bold uppercase tracking-wider hover:bg-accent hover:text-black px-2 py-1 transition-colors border-2 border-transparent hover:border-black hover:shadow-brutal-sm">
          {link.name}
        </a>
      ))}
      
      <a href="#" class="px-6 py-3 bg-secondary text-white font-bold border-4 border-black shadow-brutal hover:shadow-none hover:translate-x-1 hover:translate-y-1 transition-all uppercase">
        Katıl
      </a>
    </div>

    <!-- Mobile Menu Button -->
    <button id="menu-toggle" class="md:hidden text-black hover:text-secondary focus:outline-none border-4 border-black p-1 shadow-brutal active:shadow-none active:translate-x-1 active:translate-y-1 transition-all">
      <Menu className="w-8 h-8" />
    </button>
  </div>

  <!-- Mobile Menu Overlay -->
  <div id="mobile-menu" class="fixed inset-0 bg-accent z-40 transform translate-x-full transition-transform duration-300 md:hidden flex flex-col items-center justify-center gap-8 border-l-4 border-black">
    <button id="menu-close" class="absolute top-6 right-6 bg-white border-4 border-black p-2 shadow-brutal hover:shadow-none hover:translate-x-1 hover:translate-y-1 transition-all text-black">
      <X className="w-8 h-8" />
    </button>
    
    {links.map((link) => (
       <a href={link.href} class="text-4xl font-black text-black hover:text-white hover:underline decoration-4 decoration-black uppercase transform hover:rotate-2 transition-transform">
         {link.name}
       </a>
    ))}
  </div>
</nav>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const menuClose = document.getElementById('menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const links = document.querySelectorAll('#mobile-menu a');

  function toggleMenu() {
    mobileMenu?.classList.toggle('translate-x-full');
    document.body.classList.toggle('overflow-hidden');
  }

  menuToggle?.addEventListener('click', toggleMenu);
  menuClose?.addEventListener('click', toggleMenu);
  links.forEach(link => link.addEventListener('click', toggleMenu));
</script>
