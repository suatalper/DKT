---
import { Book, Quote } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", summary: "İdeal devlet yapısı ve adalet kavramı üzerine temel bir eser.", coverColor: "bg-blue-900" },
  { title: "1984", author: "George Orwell", summary: "Totaliter rejimlerin distopik bir eleştirisi.", coverColor: "bg-red-900" },
  { title: "Böyle Buyurdu Zerdüşt", author: "F. Nietzsche", summary: "Üstinsan kavramı ve modern ahlakın eleştirisi.", coverColor: "bg-yellow-900" },
];

const quotes = [
  { text: "Bilgi, güçtür.", author: "Francis Bacon" },
  { text: "Düşünüyorum, öyleyse varım.", author: "Descartes" },
  { text: "Sorgulanmamış hayat yaşamaya değmez.", author: "Sokrates" },
  { text: "Kendini bil.", author: "Thales" },
];
---

<section id="book-section" class="py-24 bg-white relative overflow-hidden font-sans">
  <div class="container mx-auto px-6">
    <div class="flex flex-col items-center mb-16">
      <h2 class="text-3xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">
        Kütüphane
      </h2>
      <p class="text-neutral-500">Okuma listelerimiz ve incelemeler.</p>
    </div>

    <!-- Review Pool Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {reviews.map((book) => (
        <div class="group relative bg-white rounded-xl border border-neutral-200 overflow-hidden hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
          <div class={`h-2 8 ${book.coverColor} w-full`}></div>
          <div class="p-8">
            <h3 class="text-xl font-serif font-bold text-neutral-900 mb-1">{book.title}</h3>
            <p class="text-sm font-medium text-neutral-500 mb-4">{book.author}</p>
            
            <p class="text-neutral-600 leading-relaxed mb-6 text-sm">{book.summary}</p>
            
            <button class="text-primary font-medium text-sm hover:text-primary-hover flex items-center gap-1 transition-colors">
              İncelemeyi Oku <span class="group-hover:translate-x-1 transition-transform">→</span>
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Quote Masonry -->
    <div class="mb-12">
        <h3 class="text-2xl font-serif font-bold text-neutral-900 text-center mb-10">
            Alıntılar
        </h3>
        
        <div class="columns-1 md:columns-2 lg:columns-4 gap-6 space-y-6">
            {quotes.map((quote) => (
                <div class="break-inside-avoid bg-neutral-50 p-6 rounded-xl border border-neutral-100/50 hover:bg-white hover:shadow-md transition-all">
                    <Quote className="w-6 h-6 text-primary/20 mb-3" />
                    <p class="text-lg text-neutral-800 font-serif leading-relaxed mb-4">"{quote.text}"</p>
                    <p class="text-right text-sm text-neutral-500 font-medium">— {quote.author}</p>
                </div>
            ))}
        </div>
    </div>
  </div>
</section>
