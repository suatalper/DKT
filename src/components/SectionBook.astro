---
import { Book, Quote } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", summary: "İdeal devlet yapısı ve adalet kavramı üzerine temel bir eser.", coverColor: "bg-blue-900" },
  { title: "1984", author: "George Orwell", summary: "Totaliter rejimlerin distopik bir eleştirisi.", coverColor: "bg-red-900" },
  { title: "Böyle Buyurdu Zerdüşt", author: "F. Nietzsche", summary: "Üstinsan kavramı ve modern ahlakın eleştirisi.", coverColor: "bg-yellow-900" },
];

const quotes = [
  { text: "Bilgi, güçtür.", author: "Francis Bacon" },
  { text: "Düşünüyorum, öyleyse varım.", author: "Descartes" },
  { text: "Sorgulanmamış hayat yaşamaya değmez.", author: "Sokrates" },
  { text: "Kendini bil.", author: "Thales" },
];
---

<section id="book-section" class="py-24 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="flex items-center gap-4 mb-12">
      <div class="p-3 bg-primary/20 rounded-xl">
        <Book className="w-8 h-8 text-primary" />
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-white">Kitap İnceelemeleri</h2>
    </div>

    <!-- Review Pool Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {reviews.map(book => (
        <div class="group relative bg-dark-surface/50 backdrop-blur-md rounded-2xl overflow-hidden border border-white/5 hover:border-primary/50 transition-all duration-300 hover:-translate-y-2">
          <div class={`h-48 ${book.coverColor} flex items-center justify-center opacity-80 group-hover:opacity-100 transition-opacity`}>
             <Book className="w-16 h-16 text-white/50" />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-white mb-2">{book.title}</h3>
            <p class="text-sm text-primary mb-4">{book.author}</p>
            <p class="text-text-muted text-sm mb-6">{book.summary}</p>
            <button class="w-full py-2 bg-white/5 hover:bg-primary hover:text-white text-gray-300 rounded-lg text-sm font-medium transition-colors">
              İncelemeyi Oku
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Quote Masonry -->
    <div class="mb-12">
        <div class="flex items-center gap-4 mb-8">
            <div class="p-3 bg-secondary/20 rounded-xl">
                <Quote className="w-8 h-8 text-secondary" />
            </div>
            <h3 class="text-2xl font-bold text-white">Alıntılar</h3>
        </div>
        
        <div class="columns-1 md:columns-2 lg:columns-4 gap-6 space-y-6">
            {quotes.map(quote => (
                <div class="break-inside-avoid bg-white/5 backdrop-blur-sm p-6 rounded-xl border border-white/10 hover:border-secondary/50 transition-colors">
                    <p class="text-lg text-gray-200 italic mb-4">"{quote.text}"</p>
                    <p class="text-right text-sm text-text-muted">- {quote.author}</p>
                </div>
            ))}
        </div>
    </div>
  </div>
</section>
