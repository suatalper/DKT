---
import { Book, Quote } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", summary: "İdeal devlet yapısı ve adalet kavramı üzerine temel bir eser.", coverColor: "bg-blue-900" },
  { title: "1984", author: "George Orwell", summary: "Totaliter rejimlerin distopik bir eleştirisi.", coverColor: "bg-red-900" },
  { title: "Böyle Buyurdu Zerdüşt", author: "F. Nietzsche", summary: "Üstinsan kavramı ve modern ahlakın eleştirisi.", coverColor: "bg-yellow-900" },
];

const quotes = [
  { text: "Bilgi, güçtür.", author: "Francis Bacon" },
  { text: "Düşünüyorum, öyleyse varım.", author: "Descartes" },
  { text: "Sorgulanmamış hayat yaşamaya değmez.", author: "Sokrates" },
  { text: "Kendini bil.", author: "Thales" },
];
---

<section id="book-section" class="py-24 relative overflow-hidden bg-accent font-sans border-y-4 border-black">
  <div class="container mx-auto px-6">
    <div class="flex items-center gap-4 mb-16 justify-center">
      <div class="p-4 bg-white border-4 border-black shadow-brutal rotate-3">
        <Book className="w-8 h-8 text-black" />
      </div>
      <h2 class="text-4xl md:text-6xl font-black text-black uppercase tracking-tighter bg-white px-6 py-2 border-4 border-black shadow-brutal -rotate-2">
        KÜTÜPHANE
      </h2>
    </div>

    <!-- Review Pool Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-20 px-4">
      {reviews.map((book, index) => (
        <div class="group relative hover:-translate-y-2 transition-transform duration-300">
          <div class="relative bg-white border-4 border-black shadow-brutal-lg flex flex-col h-full rounded-sm">
            <!-- Ticket Stub Top -->
            <div class={`h-32 ${index % 2 === 0 ? 'bg-primary' : 'bg-secondary'} border-b-4 border-black border-dashed flex items-center justify-center overflow-hidden relative`}>
               <div class="absolute inset-0 opacity-20 bg-grid-pattern"></div>
               <Book className="w-16 h-16 text-black drop-shadow-sm" />
               <div class="absolute -bottom-3 -left-2 w-6 h-6 bg-accent border-4 border-black rounded-full"></div>
               <div class="absolute -bottom-3 -right-2 w-6 h-6 bg-accent border-4 border-black rounded-full"></div>
            </div>
            
            <div class="p-6 flex-grow flex flex-col items-center text-center">
              <h3 class="text-2xl font-black text-black mb-1 uppercase leading-none">{book.title}</h3>
              <p class="text-sm font-bold text-gray-700 mb-4 bg-gray-200 px-2 border-2 border-black rounded-full">{book.author}</p>
              
              <p class="text-black font-medium leading-tight mb-6 grow">{book.summary}</p>
              
              <button class="w-full py-3 bg-black text-white hover:bg-white hover:text-black border-4 border-black font-black uppercase tracking-widest transition-all shadow-brutal-sm hover:translate-x-1 hover:translate-y-1 hover:shadow-none">
                İNCELE
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Quote Masonry -->
    <div class="mb-12">
        <div class="flex items-center gap-4 mb-10 justify-center">
            <h3 class="text-4xl font-black text-black bg-white px-4 py-1 border-4 border-black shadow-brutal rotate-1">
                LAFLAR
            </h3>
        </div>
        
        <div class="columns-1 md:columns-2 lg:columns-4 gap-6 space-y-6 px-4">
            {quotes.map((quote, index) => (
                <div class={`break-inside-avoid bg-white p-6 border-4 border-black shadow-brutal hover:shadow-none hover:translate-x-1 hover:translate-y-1 transition-all`} style={{ transform: `rotate(${index % 2 === 0 ? '-2deg' : '2deg'})` }}>
                    <Quote className="w-8 h-8 text-black mb-4 opacity-20 absolute top-2 left-2" />
                    <p class="text-xl text-black font-bold uppercase leading-tight mb-4 relative z-10">"{quote.text}"</p>
                    <p class="text-right text-sm text-black font-black bg-accent inline-block px-2 border-2 border-black float-right">- {quote.author}</p>
                    <div class="clear-both"></div>
                </div>
            ))}
        </div>
    </div>
  </div>
</section>
