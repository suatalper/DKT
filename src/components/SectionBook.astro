---
import { Book, Quote } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", summary: "İdeal devlet yapısı ve adalet kavramı üzerine temel bir eser.", coverColor: "bg-blue-900" },
  { title: "1984", author: "George Orwell", summary: "Totaliter rejimlerin distopik bir eleştirisi.", coverColor: "bg-red-900" },
  { title: "Böyle Buyurdu Zerdüşt", author: "F. Nietzsche", summary: "Üstinsan kavramı ve modern ahlakın eleştirisi.", coverColor: "bg-yellow-900" },
];

const quotes = [
  { text: "Bilgi, güçtür.", author: "Francis Bacon" },
  { text: "Düşünüyorum, öyleyse varım.", author: "Descartes" },
  { text: "Sorgulanmamış hayat yaşamaya değmez.", author: "Sokrates" },
  { text: "Kendini bil.", author: "Thales" },
];
---

<section id="book-section" class="py-24 relative overflow-hidden">
  <div class="container mx-auto px-6">
    <div class="flex items-center gap-4 mb-12">
      <div class="p-3 bg-[#0891b2]/10 rounded-xl">
        <Book className="w-8 h-8 text-[#0891b2]" />
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-[#1e293b]">Kitap İncelemeleri</h2>
    </div>

    <!-- Review Pool Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-20">
      {reviews.map(book => (
        <div class="group relative bg-white rounded-3xl overflow-hidden border border-gray-100 shadow-[0_20px_40px_-15px_rgba(8,145,178,0.1)] hover:shadow-[0_25px_50px_-12px_rgba(8,145,178,0.2)] transition-all duration-300 hover:-translate-y-2">
          <div class={`h-48 ${book.coverColor} flex items-center justify-center opacity-90 group-hover:opacity-100 transition-opacity`}>
             <Book className="w-16 h-16 text-white/70" />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-bold text-[#1e293b] mb-2">{book.title}</h3>
            <p class="text-sm text-[#0891b2] mb-4">{book.author}</p>
            <p class="text-[#1e293b]/70 text-sm mb-6">{book.summary}</p>
            <button class="w-full py-2 bg-[#ecfeff] hover:bg-[#0891b2] hover:text-white text-[#0891b2] rounded-lg text-sm font-medium transition-colors">
              İncelemeyi Oku
            </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Quote Masonry -->
    <div class="mb-12">
        <div class="flex items-center gap-4 mb-8">
            <div class="p-3 bg-white shadow-sm rounded-xl">
                <Quote className="w-8 h-8 text-[#991b1b]" />
            </div>
            <h3 class="text-2xl font-bold text-[#1e293b]">Alıntılar</h3>
        </div>
        
        <div class="columns-1 md:columns-2 lg:columns-4 gap-6 space-y-6">
            {quotes.map(quote => (
                <div class="break-inside-avoid bg-white p-6 rounded-3xl border border-gray-100 shadow-[0_10px_20px_-10px_rgba(8,145,178,0.1)] hover:border-[#991b1b]/50 transition-colors">
                    <p class="text-lg text-[#1e293b] italic mb-4">"{quote.text}"</p>
                    <p class="text-right text-sm text-[#1e293b]/60">- {quote.author}</p>
                </div>
            ))}
        </div>
    </div>
  </div>
</section>
