---
import { Book, Quote } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", summary: "İdeal devlet yapısı ve adalet kavramı üzerine temel bir eser.", coverColor: "bg-blue-900" },
  { title: "1984", author: "George Orwell", summary: "Totaliter rejimlerin distopik bir eleştirisi.", coverColor: "bg-red-900" },
  { title: "Böyle Buyurdu Zerdüşt", author: "F. Nietzsche", summary: "Üstinsan kavramı ve modern ahlakın eleştirisi.", coverColor: "bg-yellow-900" },
];

const quotes = [
  { text: "Bilgi, güçtür.", author: "Francis Bacon" },
  { text: "Düşünüyorum, öyleyse varım.", author: "Descartes" },
  { text: "Sorgulanmamış hayat yaşamaya değmez.", author: "Sokrates" },
  { text: "Kendini bil.", author: "Thales" },
];
---

<section id="book-section" class="py-24 relative overflow-hidden bg-vintage-100">
  <div class="container mx-auto px-6">
    <div class="flex items-center gap-4 mb-16 justify-center">
      <div class="p-4 bg-vintage-200 rounded-full border-2 border-primary/20">
        <Book className="w-8 h-8 text-primary" />
      </div>
      <h2 class="text-4xl md:text-5xl font-serif font-bold text-primary">Kütüphane & İncelemeler</h2>
    </div>

    <!-- Review Pool Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-20 px-4">
      {reviews.map(book => (
        <div class="group relative perspective-1000">
          <div class="relative bg-vintage-50 rounded-r-md rounded-l-sm shadow-[10px_10px_20px_rgba(0,0,0,0.15)] border border-l-8 border-l-primary/80 border-t-vintage-200 border-b-vintage-200 border-r-vintage-200 transition-all duration-300 hover:-translate-y-2 hover:shadow-[15px_15px_25px_rgba(44,62,80,0.2)] h-full flex flex-col">
            <!-- Spine Decoration -->
            <div class="absolute left-0 top-0 bottom-0 w-2 bg-linear-to-r from-black/20 to-transparent"></div>
            
            <div class={`h-48 ${book.coverColor} relative flex items-center justify-center overflow-hidden ml-1 rounded-tr-sm`}>
               <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/leather.png')] opacity-30 mix-blend-multiply"></div>
               <div class="absolute left-2 top-0 bottom-0 w-px bg-white/20"></div>
               <Book className="w-16 h-16 text-white/70 drop-shadow-md" />
            </div>
            
            <div class="p-6 ml-1 grow flex flex-col">
              <h3 class="text-2xl font-serif font-bold text-primary mb-1 leading-tight">{book.title}</h3>
              <p class="text-sm font-mono text-secondary mb-4 italic">{book.author}</p>
              <div class="w-12 h-px bg-accent mb-4"></div>
              <p class="text-text-muted text-sm leading-relaxed mb-6 font-serif grow">{book.summary}</p>
              
              <button class="w-full py-2 bg-transparent border border-primary/30 hover:bg-primary hover:text-vintage-50 text-primary rounded-sm text-sm font-bold font-mono uppercase tracking-wider transition-colors mt-auto">
                İncelemeyi Oku
              </button>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Quote Masonry -->
    <div class="mb-12">
        <div class="flex items-center gap-4 mb-10 justify-center">
            <div class="p-3 bg-secondary/10 rounded-full border border-secondary/30">
                <Quote className="w-6 h-6 text-secondary" />
            </div>
            <h3 class="text-3xl font-serif font-bold text-primary">Alıntılar</h3>
        </div>
        
        <div class="columns-1 md:columns-2 lg:columns-4 gap-6 space-y-6 px-4">
            {quotes.map((quote, index) => (
                <div class={`break-inside-avoid bg-[#f8f5e6] p-8 rounded-sm shadow-md border border-[#e6e2d3] hover:rotate-1 transition-transform relative`} style={{ transform: `rotate(${index % 2 === 0 ? '-1deg' : '1deg'})` }}>
                     <!-- Pin or Tape effect could vary, keeping simple paper look -->
                    <p class="text-lg text-primary font-mono leading-relaxed mb-4">"{quote.text}"</p>
                    <p class="text-right text-sm text-secondary font-serif italic">- {quote.author}</p>
                    <div class="absolute inset-0 pointer-events-none bg-[url('https://www.transparenttextures.com/patterns/cream-paper.png')] opacity-50 mix-blend-multiply"></div>
                </div>
            ))}
        </div>
    </div>
  </div>
</section>
