---
import { Book, Quote } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", summary: "İdeal devlet yapısı ve adalet kavramı üzerine temel bir eser.", coverColor: "bg-blue-900" },
  { title: "1984", author: "George Orwell", summary: "Totaliter rejimlerin distopik bir eleştirisi.", coverColor: "bg-red-900" },
  { title: "Böyle Buyurdu Zerdüşt", author: "F. Nietzsche", summary: "Üstinsan kavramı ve modern ahlakın eleştirisi.", coverColor: "bg-yellow-900" },
];

const quotes = [
  { text: "Bilgi, güçtür.", author: "Francis Bacon" },
  { text: "Düşünüyorum, öyleyse varım.", author: "Descartes" },
  { text: "Sorgulanmamış hayat yaşamaya değmez.", author: "Sokrates" },
  { text: "Kendini bil.", author: "Thales" },
];
---

<section id="book-section" class="py-24 bg-white border-b border-gray-200">
  <div class="container mx-auto px-6">
    <!-- Header -->
    <div class="flex items-start gap-4 mb-16 border-l-8 border-primary pl-6">
      <h2 class="text-4xl md:text-5xl font-black text-swiss-text tracking-tighter uppercase">Kitap<br/>İncelemeleri.</h2>
    </div>

    <!-- Review Pool Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-0 border border-gray-200 mb-24">
      {reviews.map((book, index) => (
        <div class={`group relative bg-swiss-bg p-8 flex flex-col h-full border-b md:border-b-0 border-gray-200 ${index !== 2 ? 'md:border-r' : ''} hover:bg-white transition-colors`}>
          <!-- Decorative Number -->
          <span class="absolute top-4 right-6 text-6xl font-black text-gray-100 z-0 group-hover:text-primary/10 transition-colors">
            0{index + 1}
          </span>
          
          <div class="relative z-10">
             <div class="mb-6">
                <span class={`inline-block px-3 py-1 text-xs font-bold text-white uppercase tracking-wider ${book.coverColor === 'bg-blue-900' ? 'bg-blue-700' : book.coverColor === 'bg-red-900' ? 'bg-red-700' : 'bg-yellow-600'}`}>
                  İnceleme
                </span>
             </div>
             
             <h3 class="text-3xl font-bold text-swiss-text mb-2 leading-tight">{book.title}</h3>
             <p class="text-lg font-medium text-primary mb-4">{book.author}</p>
             <p class="text-swiss-muted leading-relaxed mb-8 font-medium">
               {book.summary}
             </p>
             
             <button class="mt-auto inline-flex items-center gap-2 text-swiss-text font-bold uppercase tracking-tight group-hover:gap-4 transition-all">
               Oku <span class="text-primary text-xl">→</span>
             </button>
          </div>
        </div>
      ))}
    </div>

    <!-- Quote Masonry -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
         <div class="md:col-span-2 lg:col-span-4 mb-4 flex items-center gap-4">
             <Quote className="w-8 h-8 text-secondary fill-secondary" />
             <h3 class="text-2xl font-black text-swiss-text uppercase tracking-tight">Alıntılar</h3>
         </div>
        
        {quotes.map(quote => (
            <div class="bg-swiss-bg p-8 border border-gray-200 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
                <p class="text-xl font-bold text-swiss-text leading-tight mb-4 ">{quote.text}</p>
                <p class="text-right text-sm font-bold text-secondary uppercase tracking-widest">— {quote.author}</p>
            </div>
        ))}
    </div>
  </div>
</section>
