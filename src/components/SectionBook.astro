---
import { Book, Quote, ArrowUpRight } from 'lucide-react';

const reviews = [
  { title: "Devlet", author: "Platon", tag: "Politika", gradient: "from-blue-600 to-blue-900" },
  { title: "1984", author: "George Orwell", tag: "Distopya", gradient: "from-red-600 to-red-900" },
  { title: "Sapiens", author: "Yuval Noah Harari", tag: "Tarih", gradient: "from-yellow-600 to-orange-900" },
];
---

<section id="book-section" class="py-24 bg-neo-teal border-b-4 border-black">
  <div class="container mx-auto px-6 relative z-10">
    
    <div class="flex flex-col md:flex-row justify-between items-end mb-16 gap-6">
      <div>
        <span class="text-black font-black tracking-widest text-sm uppercase mb-2 inline-block bg-white border-2 border-black px-2 py-1 transform -rotate-2">KÜTÜPHANE</span>
        <h2 class="text-6xl font-black text-black tracking-tighter uppercase drop-shadow-neo">BİLGİ DEPOSU</h2>
      </div>
      <button class="px-8 py-3 bg-black text-white font-bold border-2 border-white hover:bg-white hover:text-black hover:border-black transition-all uppercase tracking-wider text-sm shadow-neo hover:shadow-none hover:translate-x-[4px] hover:translate-y-[4px]">
        Tüm Arşivi Gör
      </button>
    </div>

    <!-- Cards Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
       {reviews.map((book) => (
         <div class="group relative bg-white border-4 border-black p-8 hover:-translate-y-2 hover:shadow-neo-lg transition-all duration-300">
            <!-- Decorative Stripe -->
            <div class={`absolute top-0 left-0 w-full h-4 bg-linear-to-r ${book.gradient} border-b-4 border-black`}></div>
            
            <div class="relative z-10 mt-4">
                <div class="flex justify-between items-start mb-8">
                    <span class="px-3 py-1 bg-neo-yellow border-2 border-black text-xs font-black text-black uppercase tracking-wider">{book.tag}</span>
                    <ArrowUpRight className="text-black group-hover:scale-125 transition-transform" />
                </div>
                
                <h3 class="text-4xl font-black text-black mb-2 leading-none uppercase">{book.title}</h3>
                <p class="text-black font-bold text-sm uppercase mb-6 border-b-2 border-black inline-block">{book.author}</p>
                
                <div class="h-4 w-12 bg-black group-hover:w-full group-hover:bg-neo-red transition-all duration-500"></div>
            </div>
         </div>
       ))}
    </div>

    <!-- Quote Strip -->
    <div class="mt-20 py-6 border-y-4 border-black bg-neo-yellow overflow-hidden transform -rotate-1 shadow-neo">
        <div class="flex gap-12 animate-scroll whitespace-nowrap">
            {[1,2,3,4].map(() => (
                 <span class="text-3xl font-black text-black uppercase tracking-widest flex items-center gap-8">
                    Bilgi Güçtür <span class="text-white text-stroke-2">•</span> Sorgula <span class="text-white text-stroke-2">•</span> Keşfet <span class="text-white text-stroke-2">•</span>
                 </span>
            ))}
        </div>
    </div>
  </div>
</section>
