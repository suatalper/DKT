---
import { ArrowRight, BookOpen, Brain, PenTool } from 'lucide-react';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-32 pb-20 bg-neutral-50 px-6">
  <!-- Background blob -->
  <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-primary/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-[400px] h-[400px] bg-secondary/10 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

  <div class="container mx-auto relative z-10 text-center max-w-5xl">
    
    <!-- Headline -->
    <div class="mb-12">
      <span class="inline-block px-4 py-1.5 bg-primary/10 text-primary font-extrabold text-sm uppercase tracking-wider rounded-full mb-6">Topluluğa Hoşgeldin</span>
      
      <h1 class="text-6xl md:text-8xl font-black tracking-tight leading-none text-neutral-900 mb-8">
        Fikirlerin <br/>
        <span class="text-primary relative inline-block">
            Ağırlığı Yoktur
            <svg class="absolute w-full h-3 -bottom-1 left-0 text-primary/20" viewBox="0 0 100 10" preserveAspectRatio="none"><path d="M0 5 Q 50 10 100 5" stroke="currentColor" stroke-width="8" fill="none" /></svg>
        </span>
      </h1>
      
      <p class="text-xl md:text-2xl text-neutral-600 font-medium max-w-2xl mx-auto leading-relaxed">
        Okuyan, düşünen ve üretenlerin <span class="bg-primary text-white px-2 py-0.5 rounded-lg rotate-1 inline-block">buluşma noktası.</span>
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 mt-10">
      <a href="#join" class="group px-10 py-4 bg-secondary text-white font-bold text-lg rounded-full hover:bg-secondary-hover shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all flex items-center gap-3">
        Hemen Katıl <ArrowRight className="w-6 h-6 group-hover:translate-x-1 transition-transform" />
      </a>

      <a href="#workshops-section" class="px-10 py-4 bg-white text-neutral-800 font-bold text-lg border-2 border-neutral-100 rounded-full hover:border-primary hover:text-primary shadow-md hover:shadow-lg transition-all flex items-center gap-2">
        Atölyeleri Keşfet
      </a>
    </div>
    
    <!-- Meta -->
    <div class="mt-20 flex justify-center items-center gap-3">
        <div class="flex -space-x-4">
            <div class="w-12 h-12 rounded-full border-4 border-white bg-gray-200"></div>
            <div class="w-12 h-12 rounded-full border-4 border-white bg-gray-300"></div>
            <div class="w-12 h-12 rounded-full border-4 border-white bg-gray-400"></div>
        </div>
        <div class="text-left pl-2">
            <div class="font-bold text-neutral-900">5,000+ Üye</div>
            <div class="text-xs text-neutral-500 font-bold uppercase tracking-wider">Sen de gel!</div>
        </div>
    </div>
  </div>
</section>
