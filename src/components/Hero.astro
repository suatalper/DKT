---
import { ArrowRight, BookOpen, Brain, PenTool } from 'lucide-react';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-32 pb-20">
  <!-- Vintage Paper Background (Global body has texture, this adds overlay depth) -->
  <div class="absolute inset-0 z-0 opacity-5 pointer-events-none bg-[radial-gradient(circle_at_center,var(--tw-gradient-stops))] from-secondary/20 to-transparent"></div>

  <!-- Engraved Illustrations (Stationary or slow float) -->
  <div class="absolute inset-0 z-0 pointer-events-none select-none">
    <!-- Big Brain -->
    <div class="absolute top-1/4 right-[5%] w-[400px] h-[400px] opacity-15 rotate-12 mix-blend-multiply animate-float" style="animation-duration: 12s;">
      <img src="/images/engraved-brain.png" alt="Vintage Brain Illustration" class="w-full h-full object-contain drop-shadow-xl" />
    </div>
    
    <!-- Open Book -->
    <div class="absolute bottom-1/4 left-[5%] w-[350px] h-[350px] opacity-15 -rotate-6 mix-blend-multiply animate-float" style="animation-duration: 15s; animation-delay: 2s;">
       <img src="/images/engraved-book.png" alt="Vintage Book Illustration" class="w-full h-full object-contain drop-shadow-xl" />
    </div>
  </div>

  <div class="container mx-auto px-6 relative z-10 text-center">
    
    <!-- Decorative Line -->
    <div class="w-24 h-1 bg-secondary mx-auto mb-8 rounded-full opacity-60"></div>

    <!-- Headline -->
    <div class="mb-10 space-y-4">
      <h1 class="text-5xl md:text-8xl font-serif font-bold tracking-tight leading-tight text-primary drop-shadow-sm">
        <span class="block text-secondary text-4xl md:text-5xl italic mb-2 font-normal">Fikirlerin Ağırlığı Yoktur,</span>
        Havada Süzülürler.
      </h1>
      
      <p class="text-xl md:text-2xl text-primary max-w-2xl mx-auto font-mono mt-6 border-y border-dashed border-secondary/30 py-4 font-medium">
        Okuyan, düşünen ve üretenlerin buluşma noktası.
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 mt-12">
      <a href="#join" class="group relative px-10 py-4 bg-transparent border-2 border-primary text-primary hover:text-vintage-50 hover:bg-primary rounded-sm font-serif font-bold text-xl transition-all shadow-[4px_4px_0px_0px_rgba(44,62,80,0.2)] hover:shadow-none hover:translate-x-[2px] hover:translate-y-[2px]">
        <span class="flex items-center gap-3">
          Topluluğa Katıl <PenTool className="w-5 h-5" />
        </span>
      </a>

      <a href="#workshops-section" class="px-10 py-4 bg-transparent border-b-2 border-secondary text-secondary font-mono italic text-lg hover:text-primary hover:border-primary transition-colors flex items-center gap-2">
        <BookOpen className="w-5 h-5" />
        Atölyeleri İncele
      </a>
    </div>
    
    <!-- Decorative date/metadata -->
    <div class="mt-16 text-center">
        <span class="font-mono text-sm text-primary/80 tracking-[0.2em] uppercase font-bold">Est. 2024 &bull; Kütüphane &bull; Atölye</span>
    </div>
  </div>
</section>
