---
import { ArrowRight } from 'lucide-react';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-32 pb-20 px-6 bg-linear-to-br from-teal-900 via-slate-900 to-red-900">
  <!-- Mesh Gradients for Depth -->
  <div class="absolute inset-0 bg-[url('/noise.png')] opacity-20 mix-blend-overlay pointer-events-none"></div>
  <div class="absolute top-0 right-0 w-[800px] h-[800px] bg-red-600/20 rounded-full blur-[120px] mix-blend-screen opacity-50 animate-pulse duration-3000 pointer-events-none"></div>
  <div class="absolute bottom-0 left-0 w-[800px] h-[800px] bg-teal-600/20 rounded-full blur-[120px] mix-blend-screen opacity-50 animate-pulse duration-5000 pointer-events-none"></div>

  <div class="container mx-auto relative z-10 text-center max-w-5xl">
    
    <!-- Headline -->
    <div class="mb-16">
      <h1 class="text-6xl md:text-8xl font-black tracking-tighter text-white mb-8 leading-[0.9] drop-shadow-2xl">
        FİKİRLERİN <br/>
        <span class="text-transparent bg-clip-text bg-linear-to-r from-teal-400 to-teal-200">SINIRSIZ</span>
        DÜNYASI
      </h1>
      
      <p class="text-xl md:text-2xl text-slate-300 font-medium max-w-2xl mx-auto leading-relaxed">
        Bilginin ışığında, <span class="text-teal-400 font-bold">akıl</span> ve <span class="text-red-500 font-bold">tutku</span> birleşiyor.
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 mt-12">
      <a href="#join" class="group relative px-10 py-5 bg-white text-slate-900 font-black text-lg uppercase tracking-widest hover:bg-teal-50 transition-all shadow-[0_0_30px_-5px_rgba(255,255,255,0.3)] hover:shadow-[0_0_50px_-10px_rgba(45,212,191,0.5)] overflow-hidden rounded-full">
        <span class="relative z-10 flex items-center gap-2">Hemen Başla <ArrowRight className="w-5 h-5 group-hover:translate-x-1 transition-transform" /></span>
      </a>

      <a href="#workshops-section" class="px-10 py-5 text-white font-bold uppercase tracking-widest border border-white/20 hover:bg-white/10 hover:border-white/50 transition-all rounded-full backdrop-blur-md">
        Keşfet
      </a>
    </div>
    
    <!-- Bold Stats or Sticker -->
    <div class="mt-24 pt-8 flex justify-center items-center gap-12 opacity-60">
        <div class="text-center">
            <span class="block text-3xl font-black text-white">5K+</span>
            <span class="text-xs font-bold text-teal-400 uppercase tracking-widest">Üye</span>
        </div>
        <div class="h-12 w-px bg-white/20"></div>
        <div class="text-center">
            <span class="block text-3xl font-black text-white">120+</span>
            <span class="text-xs font-bold text-red-500 uppercase tracking-widest">Etkinlik</span>
        </div>
    </div>
  </div>
</section>
