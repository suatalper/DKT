---
import { ArrowRight, BookOpen, Brain, PenTool } from 'lucide-react';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden pt-20">
  <!-- Deep Space Background -->
  <div class="absolute inset-0 z-0 bg-dark-bg">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-[128px] animate-pulse-slow"></div>
    <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-secondary/10 rounded-full blur-[128px] animate-pulse-slow delay-1000"></div>
  </div>

  <!-- Floating Icons (Antigravity Effect) -->
  <div class="absolute inset-0 z-0 overflow-hidden pointer-events-none opacity-20">
    <div class="absolute top-1/3 left-[10%] animate-float" style="animation-duration: 8s;">
      <BookOpen className="w-24 h-24 text-primary transform -rotate-12" />
    </div>
    <div class="absolute top-1/4 right-[15%] animate-float" style="animation-duration: 10s; animation-delay: 1s;">
      <Brain className="w-32 h-32 text-white transform rotate-6" />
    </div>
    <div class="absolute bottom-1/3 left-[20%] animate-float" style="animation-duration: 12s; animation-delay: 2s;">
      <PenTool className="w-20 h-20 text-secondary transform -rotate-45" />
    </div>
  </div>

  <div class="container mx-auto px-6 relative z-10 text-center">
    
    <!-- Headline -->
    <div class="mb-8">
      <h1 class="text-5xl md:text-7xl font-bold tracking-tight mb-6 leading-tight max-w-4xl mx-auto">
        <span class="bg-clip-text text-transparent bg-linear-to-r from-primary via-white to-secondary">
          Fikirlerin Ağırlığı Yoktur,
        </span>
        <br />
        <span class="text-white">Havada Süzülürler.</span>
      </h1>
      
      <p class="text-xl md:text-2xl text-text-muted max-w-2xl mx-auto font-light leading-relaxed">
        Okuyan, düşünen ve üretenlerin buluşma noktası.
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col md:flex-row items-center justify-center gap-6 mt-12">
      <a href="#join" class="group relative px-8 py-4 bg-primary text-white rounded-xl font-semibold text-lg overflow-hidden shadow-lg shadow-primary/25 transition-all hover:scale-105 hover:shadow-primary/40">
        <div class="absolute inset-0 w-full h-full bg-linear-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:animate-shimmer"></div>
        <span class="flex items-center gap-2">
          Topluluğa Katıl <ArrowRight className="w-5 h-5 group-hover:translate-x-1 transition-transform" />
        </span>
      </a>

      <a href="#workshops-section" class="px-8 py-4 bg-transparent border-2 border-secondary text-white rounded-xl font-semibold text-lg hover:bg-secondary/10 hover:border-secondary transition-all flex items-center gap-2">
        Atölyeleri İncele
      </a>
    </div>
  </div>
</section>
