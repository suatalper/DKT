---
import { ArrowRight, BookOpen, Brain, PenTool } from 'lucide-react';
---

<section class="min-h-screen pt-24 pb-12 flex flex-col border-b border-gray-200">
  <div class="container mx-auto px-6 grow grid grid-cols-1 md:grid-cols-12 gap-0 border-x border-gray-200 h-full">
    
    <!-- Left Column: Image (Asymmetrical 4/12 -> 1/3) -->
    <div class="col-span-1 md:col-span-4 relative min-h-[50vh] md:min-h-auto border-r border-gray-200 overflow-hidden group">
      <!-- Image with Teal Multiply Effect -->
      <div class="absolute inset-0 bg-primary mix-blend-multiply z-10 transition-opacity duration-500 group-hover:opacity-90"></div>
      <img 
        src="https://images.unsplash.com/photo-1481627834876-b7833e8f5570?ixlib=rb-4.0.3&auto=format&fit=crop&w=1000&q=80" 
        alt="Abstract Library" 
        class="absolute inset-0 w-full h-full object-cover grayscale contrast-125"
      />
      
      <!-- Decorative Grid Lines overlay -->
      <div class="absolute inset-0 z-20 bg-[linear-gradient(to_right,transparent_99%,rgba(255,255,255,0.2)_100%)] bg-size-[2rem_100%] pointer-events-none"></div>
    </div>

    <!-- Right Column: Content (Asymmetrical 8/12 -> 2/3) -->
    <div class="col-span-1 md:col-span-8 flex flex-col justify-center p-12 md:p-24 bg-swiss-bg relative z-20">
      
      <!-- Headline -->
      <div class="mb-16">
        <h1 class="text-7xl md:text-9xl font-black tracking-tighter leading-none text-swiss-text mb-8">
          FİKİR<br/>
          <span class="text-primary">AĞIRLIĞI.</span>
        </h1>
        
        <p class="text-2xl md:text-3xl font-bold tracking-tight text-swiss-text/80 max-w-2xl leading-snug border-l-4 border-secondary pl-6">
          Düşünce ve Kitap Topluluğu. <br/>
          Okuyan, üreten ve tartışan zihinler için.
        </p>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-6">
        <a href="#join" class="px-10 py-5 bg-secondary hover:bg-red-900 text-white text-lg font-bold uppercase tracking-tight rounded-none transition-all hover:translate-x-1 flex items-center gap-3">
          Topluluğa Katıl <ArrowRight className="w-6 h-6" />
        </a>

        <a href="#workshops-section" class="px-10 py-5 bg-transparent border-2 border-swiss-text text-swiss-text text-lg font-bold uppercase tracking-tight rounded-none hover:bg-swiss-text hover:text-white transition-all">
          Atölyeleri Gör
        </a>
      </div>
    </div>

  </div>
</section>
