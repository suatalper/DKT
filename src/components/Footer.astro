---
import { Github, Twitter, Instagram } from 'lucide-react';
---

<footer class="bg-primary text-white py-16 mt-auto">
  <div class="container mx-auto px-6">
    <div class="flex flex-col md:flex-row justify-between items-center mb-12 gap-8">
      <!-- Logo & Desc -->
      <div class="text-center md:text-left">
        <h2 class="text-4xl font-black tracking-tight mb-2">DKT.</h2>
        <p class="text-white/80 font-medium text-lg">Topluluğun bir parçası ol.</p>
      </div>

      <!-- Social Links -->
      <div class="flex items-center gap-4">
        <a href="#" class="bg-white/10 hover:bg-white text-white hover:text-primary transition-all p-3 rounded-2xl">
          <Twitter className="w-6 h-6" />
        </a>
        <a href="#" class="bg-white/10 hover:bg-white text-white hover:text-primary transition-all p-3 rounded-2xl">
          <Github className="w-6 h-6" />
        </a>
        <a href="#" class="bg-white/10 hover:bg-white text-white hover:text-primary transition-all p-3 rounded-2xl">
          <Instagram className="w-6 h-6" />
        </a>
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-white/20 pt-8 text-center text-sm font-bold text-white/60">
      <p>&copy; {new Date().getFullYear()} Düşünce ve Kitap Topluluğu.</p>
    </div>
  </div>
</footer>
