---
interface Props {
  title: string;
  description: string;
  icon: any; // Using 'any' for Lucide icon component type flexibility
}

const { title, description, icon: Icon } = Astro.props;
---

<div class="group relative p-8 rounded-2xl bg-white/5 backdrop-blur-lg border border-white/10 hover:bg-white/10 hover:border-[#0891b2]/50 transition-all duration-500 hover:-translate-y-2 overflow-hidden">
  <!-- Glow Effect -->
  <div class="absolute -right-10 -top-10 w-32 h-32 bg-[#0891b2]/20 rounded-full blur-[60px] group-hover:bg-[#0891b2]/30 transition-all duration-500"></div>
  
  <div class="relative z-10">
    <div class="w-14 h-14 bg-linear-to-br from-white/10 to-white/5 rounded-xl flex items-center justify-center mb-6 text-[#0891b2] group-hover:scale-110 group-hover:text-white group-hover:bg-[#0891b2] transition-all duration-500 shadow-lg">
      <Icon className="w-7 h-7" />
    </div>
    
    <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-[#0891b2] transition-colors">{title}</h3>
    <p class="text-slate-300 leading-relaxed group-hover:text-gray-200 transition-colors">
      {description}
    </p>
  </div>
</div>
