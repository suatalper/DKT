---
interface Props {
  title: string;
  description: string;
  icon: any; // Using 'any' for Lucide icon component type flexibility
}

const { title, description, icon: Icon } = Astro.props;
---

<div class="group relative p-8 rounded-3xl bg-white shadow-[0_20px_40px_-15px_rgba(8,145,178,0.1)] hover:shadow-[0_25px_50px_-12px_rgba(8,145,178,0.2)] transition-all duration-300 hover:-translate-y-2 overflow-hidden border border-gray-50">
  
  <div class="relative z-10">
    <div class="w-14 h-14 bg-[#ecfeff] rounded-2xl flex items-center justify-center mb-6 text-[#0891b2] group-hover:scale-110 group-hover:bg-[#0891b2] group-hover:text-white transition-all duration-300 shadow-sm">
      <Icon className="w-7 h-7" />
    </div>
    
    <h3 class="text-2xl font-bold text-[#1e293b] mb-3 group-hover:text-[#0891b2] transition-colors">{title}</h3>
    <p class="text-[#1e293b]/70 leading-relaxed group-hover:text-[#1e293b]/90 transition-colors">
      {description}
    </p>
  </div>
</div>
