---
import { Calendar, MessageCircle, Hash } from 'lucide-react';

const events = [
  { day: "15", month: "OCT", title: "Felsefe Atölyesi: Stoacılık", time: "20:00", type: "Online" },
  { day: "22", month: "OCT", title: "Kitap Kulübü: 1984", time: "19:00", type: "İstanbul" },
  { day: "29", month: "OCT", title: "Yaratıcı Yazarlık Semineri", time: "14:00", type: "Online" },
];

const discussions = [
  { title: "Yapay Zeka Sanatı Öldürüyor mu?", replies: 124, tag: "Teknoloji" },
  { title: "Varoluşçu Edebiyatın Geleceği", replies: 89, tag: "Edebiyat" },
  { title: "Antik Yunan'da Adalet Kavramı", replies: 56, tag: "Felsefe" },
  { title: "Distopya mı Ütopya mı?", replies: 210, tag: "Genel" },
];
---

<section id="interaction-section" class="py-24 relative">
  <div class="container mx-auto px-6">
    <div class="flex items-center gap-4 mb-16">
      <div class="p-3 bg-white/10 rounded-xl">
        <MessageCircle className="w-8 h-8 text-white" />
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-white">Konuşma & Etkileşim</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Event Calendar -->
        <div>
            <div class="flex items-center gap-2 mb-8">
                <Calendar className="w-6 h-6 text-primary" />
                <h3 class="text-2xl font-bold text-white">Etkinlik Takvimi</h3>
            </div>

            <div class="space-y-4">
                {events.map((event) => (
                    <div class="group flex items-center gap-6 bg-white/5 p-4 rounded-xl border border-white/10 hover:border-[#0891b2]/50 transition-all hover:bg-white/10 cursor-pointer">
                        <div class="flex flex-col items-center justify-center w-16 h-16 bg-white/5 rounded-lg group-hover:bg-primary group-hover:text-white transition-colors">
                            <span class="text-xs font-bold uppercase">{event.month}</span>
                            <span class="text-xl font-bold">{event.day}</span>
                        </div>
                        <div class="flex-1">
                            <h4 class="text-lg font-bold text-white group-hover:text-primary transition-colors">{event.title}</h4>
                            <div class="flex items-center gap-4 text-sm text-text-muted mt-1">
                                <span>{event.time}</span>
                                <span class="w-1 h-1 bg-white/20 rounded-full"></span>
                                <span>{event.type}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
            
             <button class="mt-8 text-primary hover:text-white font-medium flex items-center gap-2 transition-colors">
                Tüm Etkinlikleri Gör →
            </button>
        </div>

        <!-- Forum Highlights -->
        <div>
            <div class="flex items-center gap-2 mb-8">
                <Hash className="w-6 h-6 text-secondary" />
                <h3 class="text-2xl font-bold text-white">Gündemdeki Tartışmalar</h3>
            </div>

            <div class="bg-dark-surface/50 rounded-2xl border border-white/5 overflow-hidden">
                {discussions.map((topic, index) => (
                    <div class={`p-5 flex items-center justify-between hover:bg-white/5 transition-colors cursor-pointer border-b border-white/5 last:border-0`}>
                        <div>
                            <span class="inline-block px-2 py-1 bg-white/5 rounded text-xs text-secondary border border-secondary/20 mb-2">{topic.tag}</span>
                            <h4 class="text-lg font-medium text-gray-200 hover:text-white transition-colors">{topic.title}</h4>
                        </div>
                        <div class="flex items-center gap-1 text-text-muted">
                            <MessageCircle className="w-4 h-4" />
                            <span class="text-sm">{topic.replies}</span>
                        </div>
                    </div>
                ))}
            </div>
             <button class="mt-8 text-secondary hover:text-white font-medium flex items-center gap-2 transition-colors">
                Foruma Katıl →
            </button>
        </div>
    </div>
  </div>
</section>
