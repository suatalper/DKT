---
import { Calendar, MessageCircle, Hash, Zap } from 'lucide-react';

const events = [
  { day: "15", month: "Ekim", title: "Stoacılık Atölyesi", time: "20:00", type: "Online" },
  { day: "22", month: "Ekim", title: "Kitap Kulübü: 1984", time: "19:00", type: "İstanbul" },
  { day: "29", month: "Ekim", title: "Yaratıcı Yazarlık", time: "14:00", type: "Online" },
];

const discussions = [
  { title: "Yapay Zeka Sanatı Öldürüyor mu?", replies: 124, tag: "Tekno" },
  { title: "Varoluşçu Edebiyatın Geleceği", replies: 89, tag: "Edebiyat" },
  { title: "Antik Yunan'da Adalet", replies: 56, tag: "Felsefe" },
];
---

<section id="interaction-section" class="py-24 bg-white border-t-4 border-black">
  <div class="container mx-auto px-6 max-w-6xl">
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Event List -->
        <div>
            <div class="flex items-center gap-3 mb-8">
                <div class="p-2 bg-neo-teal border-2 border-black shadow-neo">
                    <Calendar className="w-8 h-8 text-black" />
                </div>
                <h3 class="text-4xl font-black text-black tracking-tight uppercase">ETKİNLİKLER</h3>
            </div>

            <div class="space-y-4">
                {events.map((event) => (
                    <div class="group flex items-center gap-6 bg-cream p-4 border-4 border-black hover:shadow-neo hover:-translate-y-1 transition-all cursor-pointer">
                        <div class="flex flex-col items-center justify-center w-20 h-20 bg-black text-white font-black border-2 border-black">
                            <span class="text-3xl leading-none">{event.day}</span>
                            <span class="text-xs uppercase text-neo-teal">{event.month.substring(0,3)}</span>
                        </div>
                        <div class="flex-1">
                            <h4 class="text-xl font-bold text-black group-hover:bg-neo-yellow group-hover:inline-block transition-all mb-1 uppercase">{event.title}</h4>
                            <div class="flex items-center gap-3 text-xs font-black text-black uppercase tracking-wider">
                                <span>{event.time}</span>
                                <span class="w-3 h-3 bg-neo-red border-2 border-black"></span>
                                <span class="bg-white border border-black px-1">{event.type}</span>
                            </div>
                        </div>
                        <Zap className="w-8 h-8 text-black group-hover:text-neo-red transition-colors transform group-hover:rotate-12" />
                    </div>
                ))}
            </div>
        </div>

        <!-- Forum List -->
        <div>
            <div class="flex items-center gap-3 mb-8">
                <div class="p-2 bg-neo-red border-2 border-black shadow-neo">
                    <Hash className="w-8 h-8 text-white" />
                </div>
                <h3 class="text-4xl font-black text-black tracking-tight uppercase">TARTIŞMALAR</h3>
            </div>

            <div class="space-y-4">
                {discussions.map((topic) => (
                    <div class="p-6 bg-white border-4 border-black flex items-center justify-between hover:bg-neo-yellow hover:shadow-neo transition-all cursor-pointer group">
                        <div>
                            <span class="inline-block px-2 py-1 bg-black text-white text-[10px] font-black uppercase mb-2 transform -rotate-2">{topic.tag}</span>
                            <h4 class="text-xl font-bold text-black group-hover:underline">{topic.title}</h4>
                        </div>
                        <div class="flex flex-col items-end gap-1 text-black text-xs font-black">
                            <MessageCircle className="w-6 h-6 mb-1" />
                            <span>{topic.replies} YANIT</span>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
  </div>
</section>
