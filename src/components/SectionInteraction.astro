---
import { Calendar, MessageCircle, Hash } from 'lucide-react';

const events = [
  { day: "15", month: "OCT", title: "Felsefe Atölyesi: Stoacılık", time: "20:00", type: "Online" },
  { day: "22", month: "OCT", title: "Kitap Kulübü: 1984", time: "19:00", type: "İstanbul" },
  { day: "29", month: "OCT", title: "Yaratıcı Yazarlık Semineri", time: "14:00", type: "Online" },
];

const discussions = [
  { title: "Yapay Zeka Sanatı Öldürüyor mu?", replies: 124, tag: "Teknoloji" },
  { title: "Varoluşçu Edebiyatın Geleceği", replies: 89, tag: "Edebiyat" },
  { title: "Antik Yunan'da Adalet Kavramı", replies: 56, tag: "Felsefe" },
  { title: "Distopya mı Ütopya mı?", replies: 210, tag: "Genel" },
];
---

<section id="interaction-section" class="py-24 relative">
  <div class="container mx-auto px-6">
    <div class="flex items-center gap-4 mb-16">
      <div class="p-3 bg-white shadow-sm rounded-xl">
        <MessageCircle className="w-8 h-8 text-[#0891b2]" />
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-[#1e293b]">Konuşma & Etkileşim</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Event Calendar -->
        <div>
            <div class="flex items-center gap-2 mb-8">
                <Calendar className="w-6 h-6 text-[#991b1b]" />
                <h3 class="text-2xl font-bold text-[#1e293b]">Etkinlik Takvimi</h3>
            </div>

            <div class="space-y-4">
                {events.map((event) => (
                    <div class="group flex items-center gap-6 bg-white p-4 rounded-2xl border border-gray-100 shadow-[0_10px_20px_-10px_rgba(8,145,178,0.1)] hover:shadow-[0_15px_30px_-12px_rgba(8,145,178,0.2)] transition-all hover:-translate-x-[-4px] cursor-pointer">
                        <div class="flex flex-col items-center justify-center w-16 h-16 bg-[#ecfeff] rounded-2xl group-hover:bg-[#0891b2] group-hover:text-white transition-colors text-[#0891b2]">
                            <span class="text-xs font-bold uppercase">{event.month}</span>
                            <span class="text-xl font-bold">{event.day}</span>
                        </div>
                        <div class="flex-1">
                            <h4 class="text-lg font-bold text-[#1e293b] group-hover:text-[#0891b2] transition-colors">{event.title}</h4>
                            <div class="flex items-center gap-4 text-sm text-[#1e293b]/60 mt-1">
                                <span>{event.time}</span>
                                <span class="w-1 h-1 bg-[#1e293b]/20 rounded-full"></span>
                                <span>{event.type}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
            
             <button class="mt-8 text-[#0891b2] hover:text-[#991b1b] font-medium flex items-center gap-2 transition-colors">
                Tüm Etkinlikleri Gör →
            </button>
        </div>

        <!-- Forum Highlights -->
        <div>
            <div class="flex items-center gap-2 mb-8">
                <Hash className="w-6 h-6 text-[#991b1b]" />
                <h3 class="text-2xl font-bold text-[#1e293b]">Gündemdeki Tartışmalar</h3>
            </div>

            <div class="bg-white rounded-3xl border border-gray-100 overflow-hidden shadow-[0_20px_40px_-15px_rgba(8,145,178,0.1)]">
                {discussions.map((topic, index) => (
                    <div class={`p-5 flex items-center justify-between hover:bg-[#ecfeff]/50 transition-colors cursor-pointer border-b border-gray-50 last:border-0`}>
                        <div>
                            <span class="inline-block px-2 py-1 bg-[#fff1f2] rounded text-xs text-[#991b1b] border border-[#991b1b]/20 mb-2">{topic.tag}</span>
                            <h4 class="text-lg font-medium text-[#1e293b] hover:text-[#0891b2] transition-colors">{topic.title}</h4>
                        </div>
                        <div class="flex items-center gap-1 text-[#1e293b]/50">
                            <MessageCircle className="w-4 h-4" />
                            <span class="text-sm">{topic.replies}</span>
                        </div>
                    </div>
                ))}
            </div>
             <button class="mt-8 text-[#991b1b] hover:text-[#0891b2] font-medium flex items-center gap-2 transition-colors">
                Foruma Katıl →
            </button>
        </div>
    </div>
  </div>
</section>
