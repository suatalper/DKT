---
import { Calendar, MessageCircle, Hash } from 'lucide-react';

const events = [
  { day: "15", month: "OCT", title: "Felsefe Atölyesi: Stoacılık", time: "20:00", type: "Online" },
  { day: "22", month: "OCT", title: "Kitap Kulübü: 1984", time: "19:00", type: "İstanbul" },
  { day: "29", month: "OCT", title: "Yaratıcı Yazarlık Semineri", time: "14:00", type: "Online" },
];

const discussions = [
  { title: "Yapay Zeka Sanatı Öldürüyor mu?", replies: 124, tag: "Teknoloji" },
  { title: "Varoluşçu Edebiyatın Geleceği", replies: 89, tag: "Edebiyat" },
  { title: "Antik Yunan'da Adalet Kavramı", replies: 56, tag: "Felsefe" },
  { title: "Distopya mı Ütopya mı?", replies: 210, tag: "Genel" },
];
---

<section id="interaction-section" class="py-24 bg-white relative">
  <div class="container mx-auto px-6">
    <div class="flex flex-col items-center mb-16 text-center">
      <h2 class="text-3xl md:text-5xl font-serif font-bold text-neutral-900 mb-4">Konuşma & Etkileşim</h2>
      <p class="text-neutral-500 max-w-2xl mx-auto font-sans">Topluluğun kalbi burada atıyor.</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Event Calendar -->
        <div>
            <div class="flex items-center gap-3 mb-8">
                <Calendar className="w-5 h-5 text-primary" />
                <h3 class="text-xl font-bold text-neutral-900 border-b border-neutral-100 pb-2 flex-grow">Etkinlik Takvimi</h3>
            </div>

            <div class="space-y-4">
                {events.map((event) => (
                    <div class="group flex items-center gap-6 bg-white p-4 rounded-xl border border-neutral-100 hover:border-primary/30 transition-all hover:shadow-md cursor-pointer">
                        <div class="flex flex-col items-center justify-center w-14 h-14 bg-neutral-50 rounded-lg group-hover:bg-primary group-hover:text-white transition-colors text-neutral-700">
                            <span class="text-[10px] font-bold uppercase tracking-wider">{event.month}</span>
                            <span class="text-lg font-bold leading-none">{event.day}</span>
                        </div>
                        <div class="flex-1">
                            <h4 class="text-base font-bold text-neutral-800 group-hover:text-primary transition-colors">{event.title}</h4>
                            <div class="flex items-center gap-4 text-xs font-medium text-neutral-400 mt-1">
                                <span>{event.time}</span>
                                <span class="w-1 h-1 bg-neutral-300 rounded-full"></span>
                                <span>{event.type}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
            
             <button class="mt-6 text-primary hover:text-primary-hover font-medium text-sm flex items-center gap-2 transition-colors">
                Tüm Etkinlikleri Gör →
            </button>
        </div>

        <!-- Forum Highlights -->
        <div>
            <div class="flex items-center gap-3 mb-8">
                <Hash className="w-5 h-5 text-accent" />
                <h3 class="text-xl font-bold text-neutral-900 border-b border-neutral-100 pb-2 flex-grow">Gündemdeki Tartışmalar</h3>
            </div>

            <div class="bg-neutral-50 rounded-2xl border border-neutral-100 overflow-hidden">
                {discussions.map((topic) => (
                    <div class="p-5 flex items-center justify-between hover:bg-white transition-colors cursor-pointer border-b border-neutral-200/50 last:border-0 group">
                        <div>
                            <span class="inline-block px-2 py-0.5 bg-white rounded-full text-[10px] font-bold text-neutral-500 border border-neutral-200 mb-2">{topic.tag}</span>
                            <h4 class="text-base font-medium text-neutral-700 group-hover:text-primary transition-colors">{topic.title}</h4>
                        </div>
                        <div class="flex items-center gap-1 text-neutral-400 text-xs">
                            <MessageCircle className="w-3.5 h-3.5" />
                            <span>{topic.replies}</span>
                        </div>
                    </div>
                ))}
            </div>
             <button class="mt-6 text-accent hover:text-accent font-medium text-sm flex items-center gap-2 transition-colors">
                Foruma Katıl →
            </button>
        </div>
    </div>
  </div>
</section>
