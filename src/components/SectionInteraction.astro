---
import { Calendar, MessageCircle, Hash } from 'lucide-react';

const events = [
  { day: "15", month: "OCT", title: "Felsefe Atölyesi: Stoacılık", time: "20:00", type: "Online" },
  { day: "22", month: "OCT", title: "Kitap Kulübü: 1984", time: "19:00", type: "İstanbul" },
  { day: "29", month: "OCT", title: "Yaratıcı Yazarlık Semineri", time: "14:00", type: "Online" },
];

const discussions = [
  { title: "Yapay Zeka Sanatı Öldürüyor mu?", replies: 124, tag: "Teknoloji" },
  { title: "Varoluşçu Edebiyatın Geleceği", replies: 89, tag: "Edebiyat" },
  { title: "Antik Yunan'da Adalet Kavramı", replies: 56, tag: "Felsefe" },
  { title: "Distopya mı Ütopya mı?", replies: 210, tag: "Genel" },
];
---

<section id="interaction-section" class="py-24 bg-white border-b border-gray-200">
  <div class="container mx-auto px-6">
    <div class="flex items-start gap-4 mb-20 border-l-8 border-primary pl-6">
       <h2 class="text-4xl md:text-5xl font-black text-swiss-text tracking-tighter uppercase">Konuşma &<br/>Etkileşim.</h2>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-24">
        <!-- Event Calendar -->
        <div>
            <div class="flex items-center gap-3 mb-8 border-b-2 border-primary pb-4">
                <Calendar className="w-6 h-6 text-primary" />
                <h3 class="text-2xl font-black text-swiss-text uppercase tracking-tight">Etkinlik Takvimi</h3>
            </div>

            <div class="border-t border-gray-200">
                {events.map((event) => (
                    <div class="group flex items-start gap-6 py-6 border-b border-gray-200 hover:bg-swiss-bg transition-colors cursor-pointer">
                        <div class="flex flex-col items-center justify-center w-16 shrink-0">
                            <span class="text-xs font-bold uppercase text-swiss-muted">{event.month}</span>
                            <span class="text-3xl font-black text-primary">{event.day}</span>
                        </div>
                        <div class="flex-1">
                            <h4 class="text-xl font-bold text-swiss-text group-hover:text-primary transition-colors leading-tight mb-2">{event.title}</h4>
                            <div class="flex items-center gap-4 text-sm font-medium text-swiss-muted">
                                <span class="uppercase tracking-wide">{event.time}</span>
                                <span class="w-1 h-1 bg-gray-300 rounded-full"></span>
                                <span class="uppercase tracking-wide">{event.type}</span>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
            
             <button class="mt-8 text-lg font-bold text-primary uppercase tracking-tight hover:underline flex items-center gap-2">
                Tüm Etkinlikleri Gör →
            </button>
        </div>

        <!-- Forum Highlights -->
        <div>
            <div class="flex items-center gap-3 mb-8 border-b-2 border-secondary pb-4">
                <Hash className="w-6 h-6 text-secondary" />
                <h3 class="text-2xl font-black text-swiss-text uppercase tracking-tight">Gündemdeki Tartışmalar</h3>
            </div>

            <div class="border border-gray-200 bg-swiss-bg">
                {discussions.map((topic, index) => (
                    <div class={`p-6 flex items-center justify-between hover:bg-white transition-colors cursor-pointer border-b border-gray-200 last:border-0 group`}>
                        <div>
                            <span class="inline-block px-2 py-1 bg-white border border-gray-200 rounded-none text-xs font-bold text-secondary uppercase tracking-widest mb-2">{topic.tag}</span>
                            <h4 class="text-lg font-bold text-swiss-text group-hover:text-secondary transition-colors">{topic.title}</h4>
                        </div>
                        <div class="flex items-center gap-2 text-swiss-muted font-bold">
                            <MessageCircle className="w-4 h-4" />
                            <span class="text-sm">{topic.replies}</span>
                        </div>
                    </div>
                ))}
            </div>
             <button class="mt-8 text-lg font-bold text-secondary uppercase tracking-tight hover:underline flex items-center gap-2">
                Foruma Katıl →
            </button>
        </div>
    </div>
  </div>
</section>
